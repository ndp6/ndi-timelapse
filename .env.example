# Example environment configuration
# Copy this file to .env and update with your specific values

# Timezone
TZ=America/New_York

# NDI Source Configuration
NDI_SOURCE_NAME=Your-Camera-Name (CAM)
NDI_SOURCE_URL=192.168.1.100:5961
NDILIB_DISCOVERY_SERVERS=192.168.1.1:5959

# Capture Settings
CAPTURE_INTERVAL=15          # Minutes between captures
START_HOUR=5                 # Start capturing at 5 AM
END_HOUR=21                  # Stop capturing at 9 PM
RECORD_SECONDS=5             # Record duration for each capture
JPEG_QUALITY=95              # JPEG quality (1-100)
FRAME_NUMBER=120             # Which frame to extract from recording

# Directory Configuration
OUTPUT_DIR=/output
LOG_DIR=/logs
